#!/usr/bin/env ruby

require_relative '../lib/turn'


board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

def turn(board)
  puts "Please enter 1-9:"
  input = gets.strip
  input = input_to_index(input)
  if (valid_move(board, input))
    move(board, input, value = "X")
  else
    turn(board)
  end
end
